// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model InstagramAccount {
  id          String   @id @default(uuid())
  shop        String   @unique
  accessToken String
  userId      String
  username    String?
  updatedAt   DateTime @updatedAt
}

model Settings {
  id              String   @id @default(uuid())
  shop            String   @unique
  title           String   @default("INSTAGRAM'DA BİZ")
  subheading      String   @default("Daha Fazlası İçin Bizi Takip Edebilirsiniz")
  feedType        String   @default("slider") // slider, grid
  showPinnedReels Boolean  @default(false)
  gridDesktopColumns  Int      @default(4)
  gridMobileColumns   Int      @default(2)
  sliderDesktopColumns Int     @default(4)
  sliderMobileColumns  Int     @default(2)
  showArrows      Boolean  @default(true)
  onClick         String   @default("popup")
  postSpacing     String   @default("medium")
  borderRadius    String   @default("medium")
  playVideoOnHover Boolean @default(false)
  showThumbnail   Boolean  @default(false)
  showViewsCount  Boolean  @default(false)
  showAuthorProfile Boolean @default(true)
  showAttachedProducts Boolean @default(true)
  titleColor      String   @default("#000000")
  subheadingColor String   @default("#6d7175")
  arrowColor      String   @default("#000000")
  arrowBackgroundColor String @default("#ffffff")
  cardUserNameColor String @default("#ffffff")
  cardBadgeBackgroundColor String @default("rgba(0,0,0,0.5)")
  cardBadgeIconColor String @default("#ffffff")
  updatedAt       DateTime @updatedAt
}

model Analytics {
  id        String   @id @default(uuid())
  shop      String
  date      DateTime @default(now())
  views     Int      @default(0)
  clicks    Int      @default(0)

  @@unique([shop, date])
}

model PostAnalytics {
  id        String   @id @default(uuid())
  shop      String
  mediaId   String
  mediaUrl  String?
  permalink String?
  views     Int      @default(0)
  clicks    Int      @default(0)
  updatedAt DateTime @updatedAt

  @@unique([shop, mediaId])
}

